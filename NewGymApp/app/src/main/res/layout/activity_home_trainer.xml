<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainerHomeActivity"
    android:background="@color/Black"
    android:orientation="vertical"
    android:layout_gravity="top">


    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/HV"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

    </LinearLayout>


    <ImageButton
        android:id="@+id/logoutbtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/backarrow50"
        android:backgroundTint="@color/White"
        app:layout_constraintStart_toStartOf="@+id/menuBar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"

        />

    <TextView
        android:id="@+id/wellcometv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="hello *****!"
        android:textColor="@color/White"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="10dp"

        />


    <androidx.cardview.widget.CardView
        android:id="@+id/profilecv"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/wellcometv"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@color/UnselectedField"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/porfilepic"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/heavyspace_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/profiletv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/porfilepic"
            android:text="****"
            android:textSize="14dp"
            android:textColor="@color/White"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>


     </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/statsCV"
        android:layout_width="250dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/wellcometv"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/UnselectedField"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/actualWorkoutsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/actual_workouts"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="10dp"
                android:textColor="@color/White"
                />

            <TextView
                android:id="@+id/img1txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@id/img1"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/White"
                android:layout_marginRight="135dp"
                />
        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/levelbegginer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/img2"
            android:layout_marginBottom="5dp"
        />
            <TextView
                android:id="@+id/img2txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@id/img2"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/White"
                android:layout_marginRight="85dp"
                />
        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/levelmiddle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/img3"
            android:layout_marginBottom="10dp"
            />
            <TextView
                android:id="@+id/img3txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@id/img3"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/White"
                android:layout_marginRight="35dp"
                />
        <ImageView
            android:id="@+id/img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/leveladvanced"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <RadioGroup
        android:id="@+id/radioGroupLevels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/statsCV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:checkedButton="@id/allRB"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"




        >

        <RadioButton
            android:id="@+id/allRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all"
            android:textColor="@color/White"
            android:checked="true"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="10dp"

            />
        <RadioButton
            android:id="@+id/begginerRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/beginner"
            android:textColor="@color/White"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="15dp"

            />
        <RadioButton
            android:id="@+id/middleRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/middle"
            android:textColor="@color/White"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="15dp"

            />
        <RadioButton
            android:id="@+id/advancedRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/advanced"
            android:textColor="@color/White"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"


            />
    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvWorkout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/statsCV"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"

        />

    <androidx.cardview.widget.CardView
        android:id="@+id/createWorkoutCV"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="130dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#00FFFFFF"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/historicstyle"
            >


            <LinearLayout
                android:id="@+id/historicalTopBar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/roundedhvcolor"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_workout"
                    android:textColor="@color/White"
                    android:textSize="20sp"
                    android:layout_margin="10dp"
                    />

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="2dp"

                />

            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/newNametv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/newUserName"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="10dp"
                    android:textColor="@color/White"
                    android:textSize="15sp"
                    />
                <EditText
                    android:id="@+id/newNameet"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    app:layout_constraintTop_toBottomOf="@+id/newNametv"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:textSize="15sp"
                    android:background="@drawable/roundedwhitecolor"
                    android:paddingStart="10dp"

                    />
                <TextView
                    android:id="@+id/newUrltv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/linkworkout"
                    app:layout_constraintTop_toBottomOf="@id/newNameet"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="10dp"
                    android:textColor="@color/White"
                    android:textSize="15sp"

                    />
                <EditText
                    android:id="@+id/newUrlet"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    app:layout_constraintTop_toBottomOf="@+id/newUrltv"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:textSize="15dp"
                    android:background="@drawable/roundedwhitecolor"
                    android:paddingStart="10dp"


                    />


                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/createDivider"
                    android:layout_width="2dp"
                    android:layout_height="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:dividerColor="@color/Black"
                    />

                <TextView
                    android:id="@+id/newLeveltv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/createDivider"
                    android:text="@string/level"
                    android:textColor="@color/White"
                    android:layout_marginVertical="10dp"
                    android:textSize="15dp"
                    android:layout_marginRight="95dp"

                    />
                <RadioGroup
                    android:id="@+id/levelRG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/createDivider"
                    app:layout_constraintTop_toBottomOf="@+id/newLeveltv"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="5dp"


                    >                    <RadioButton
                        android:id="@+id/newBegginerRB"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="@string/beginner"
                        android:textColor="@color/White"
                        android:checked="true"
                        android:drawableTint="@color/HV"
                        />
                    <RadioButton
                        android:id="@+id/newMiddleRB"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="@string/middle"
                        android:textColor="@color/White"
                        />
                    <RadioButton
                        android:id="@+id/newAdvancedRB"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="@string/advanced"
                        android:textColor="@color/White"
                        />

                </RadioGroup>

                <ImageButton
                    android:id="@+id/addWorkoutBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/add"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    >
                </ImageButton>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/profilechangercv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="130dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#00FFFFFF"
        android:visibility="gone"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/profilestyle"
            >
            <TextView
                android:id="@+id/previewtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profilepreview"
                android:textColor="@color/White"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/profileDivider"
                android:layout_margin="10dp"
                android:textSize="17sp"
                />
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="150dp"
                android:layout_height="130dp"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/heavyspace_bg"
                app:layout_constraintTop_toBottomOf="@+id/previewtv"
                app:layout_constraintEnd_toStartOf="@id/profileDivider"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/profileUrltv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/linkworkout"
                app:layout_constraintTop_toBottomOf="@id/profileImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/profileDivider"
                android:layout_margin="10dp"
                android:textColor="@color/White"
                android:textSize="17sp"

                />
            <EditText
                android:id="@+id/profileUrlet"
                android:layout_width="120dp"
                android:layout_height="25dp"
                app:layout_constraintTop_toBottomOf="@+id/profileUrltv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/profileDivider"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:textSize="17sp"
                android:background="@drawable/roundedwhitecolor"
                android:paddingStart="10dp"

                />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/profileDivider"
                android:layout_width="2dp"
                android:layout_height="230dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/applybtn"

                app:dividerColor="@color/Black"

                />
            <TextView
                android:id="@+id/profileNametv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/newUserName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/profileDivider"
                android:layout_margin="10dp"

                android:textColor="@color/White"
                android:textSize="17sp"
                />
            <EditText
                android:id="@+id/profileNameet"
                android:layout_width="120dp"
                android:layout_height="25dp"
                app:layout_constraintTop_toBottomOf="@+id/profileNametv"
                app:layout_constraintStart_toEndOf="@+id/profileDivider"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/roundedwhitecolor"
                android:textSize="15sp"
                android:paddingStart="10dp"


                />
            <TextView
                android:id="@+id/profileLastNametv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/newUserLastName"
                app:layout_constraintTop_toBottomOf="@id/profileNameet"
                app:layout_constraintStart_toEndOf="@+id/profileDivider"
                android:layout_margin="10dp"
                android:textColor="@color/White"
                android:textSize="17sp"

                />
            <EditText
                android:id="@+id/profileLastNameet"
                android:layout_width="120dp"
                android:layout_height="25dp"
                app:layout_constraintTop_toBottomOf="@+id/profileLastNametv"
                app:layout_constraintStart_toEndOf="@+id/profileDivider"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/roundedwhitecolor"
                android:textSize="17sp"
                android:paddingStart="10dp"


                />

            <TextView
                android:id="@+id/profileEmailtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/profileLastNameet"
                app:layout_constraintStart_toEndOf="@+id/profileDivider"
                android:text="@string/email"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:textColor="@color/White"
                android:textSize="17sp"

                />
            <EditText
                android:id="@+id/profileEmailet"
                android:layout_width="120dp"
                android:layout_height="25dp"
                app:layout_constraintTop_toBottomOf="@+id/profileEmailtv"
                app:layout_constraintStart_toEndOf="@+id/profileDivider"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/roundedwhitecolor"
                android:textSize="17sp"
                android:paddingStart="10dp"

                />
            <TextView
                android:id="@+id/profileBirthtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/profileEmailet"
                app:layout_constraintStart_toEndOf="@+id/profileDivider"
                android:text="@string/newBirthdate"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:textColor="@color/White"
                android:textSize="17sp"

                />

            <EditText
                android:id="@+id/profileBirthet"
                android:layout_width="120dp"
                android:layout_height="25dp"
                app:layout_constraintTop_toBottomOf="@+id/profileBirthtv"
                app:layout_constraintStart_toEndOf="@+id/profileDivider"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/roundedwhitecolor"
                android:textSize="17sp"
                android:paddingStart="10dp"

                />

            <Button
                android:id="@+id/applybtn"
                android:layout_width="90dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/profileBirthet"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                android:layout_marginTop="10dp"
                android:backgroundTint="@color/HV"
                android:text="@string/apply"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:id="@+id/menuBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/UnselectedField"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/profilebtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/profilepic"></ImageButton>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="2dp"
            android:layout_height="80dp"
            app:dividerColor="@color/Black"
            android:layout_margin="60dp"
            >
            </com.google.android.material.divider.MaterialDivider>
        <ImageButton
            android:id="@+id/createWorkout"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/createworkout"
            ></ImageButton>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>